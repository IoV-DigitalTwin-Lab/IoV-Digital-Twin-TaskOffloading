<!--
30 Cars from 3 different starting points, each following specific paths
Flow 0: North route (tertiary road) - 10 vehicles (RED)
Flow 1: Central route (main corridor) - 10 vehicles (GREEN)
Flow 2: West route (western side) - 10 vehicles (BLUE)
-->

<routes>
   <!-- Vehicle type definition -->
   <vType id="vtype0" accel="2.6" decel="4.5" sigma="0.5" length="2.5" minGap="2.5" maxSpeed="14" color="1,1,0"/>
   
   <!-- Route 0: North route - starts from tertiary road, goes through city -->
   <route id="route0" edges="-10573414#1 10573414#1 3013106#0 3013106#1 3013106#2 4319352#1 44069041#0 44069041#1 4400949 31982182#0 4047241 4797872 4797871 -15259223"/>
   
   <!-- Route 1: Central route - main corridor through Erlangen -->
   <route id="route1" edges="-113939241 113939244#0 113939244#1 113939244#2 -126606716 23339459 30405358#1 85355912 85355911#0 85355911#1 30405356 5931612 30350450#0 30350450#1 30350450#2 4006702#0 4006702#1 4006702#2 -28269598 -4006703#1 4006705#1 -25210699"/>
   
   <!-- Route 2: West route - from western side through city -->
   <route id="route2" edges="-23805514#0 23805514#0 23805514#1 -4006702#2 -4006702#1 -4006702#0 4319352#1 44069041#0 44069041#1 4400949 31982182#0 4047241 4797872 4797871 4006668 126606716 -126606716"/>
   
   <!-- Flow 0: 10 vehicles starting at t=0, one every 3 seconds (RED) -->
   <flow id="flow0" type="vtype0" route="route0" begin="0" period="3" number="10" color="1,0,0"/>
   
   <!-- Flow 1: 10 vehicles starting at t=0, one every 3 seconds (GREEN) -->
   <flow id="flow1" type="vtype0" route="route1" begin="0" period="3" number="10" color="0,1,0"/>
   
   <!-- Flow 2: 10 vehicles starting at t=0, one every 3 seconds (BLUE) -->
   <flow id="flow2" type="vtype0" route="route2" begin="0" period="3" number="10" color="0,0,1"/>
</routes>
